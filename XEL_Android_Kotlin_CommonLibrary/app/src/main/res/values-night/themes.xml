<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XEL_Android_CommonLibrary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/common_black_only</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/common_black_only</item>
        <item name="colorControlHighlight">@color/common_transparent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>

        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>

        <!-- 전환 애니메이션 활성화 -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Style to use for Snackbars in this theme. -->
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>

        <!-- 뒤로가기버튼 -->
        <item name="android:homeAsUpIndicator">@mipmap/xel_arrowk_back_36dp</item>

        <!-- 투명 바 관련 -->
        <!-- 상태바 아래에 다른 뷰가 표시될 수 있도록 합니다. 단, 네비게이션 바 부분은 제외합니다. (일반적인 경우와 마찬가지로 네비게이션 바 위에 뷰가 표시됩니다) -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- 백키변경 -->
        <!-- <item name="android:homeAsUpIndicator" tools:ignore="NewApi">@mipmap/ic_launcher</item> -->


        <!--
         <item name="android:windowTranslucentNavigation">true</item>
         <item name="android:navigationBarColor">@color/duzonColor</item>
         -->

        <!-- 네비게이션바 투명을 위한 작업 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 안드로이드 11 이상은 아래값을 넣어야만 완전한 투명이 된다. -->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>

        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="O_MR1">
            shortEdges <!-- default, shortEdges, never -->
        </item>
    </style>
</resources>